<Window x:Class="UpworkJiraTracker.XAML.TimezonePickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Timezone"
        Height="350"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        Topmost="True"
        ResizeMode="NoResize">

    <Grid>
        <Border Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="6"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                                ShadowDepth="2"
                                Opacity="0.3"
                                Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title bar -->
                <Border Grid.Row="0"
                       Background="#F5F5F5"
                       BorderBrush="#CCCCCC"
                       BorderThickness="0,0,0,1"
                       CornerRadius="6,6,0,0"
                       Padding="12,8">
                    <TextBlock Text="Add Timezone"
                              Style="{StaticResource StyleDialogTitle}"/>
                </Border>

                <!-- Content -->
                <StackPanel Grid.Row="1"
                           Margin="16">
                    <TextBlock Text="Caption:"
                              Style="{StaticResource StyleDialogLabel}"/>
                    <TextBox x:Name="CaptionTextBox"
                            Text="{Binding TimezoneCaption, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource StyleDialogInput}"/>

                    <TextBlock Text="Timezone:"
                              Style="{StaticResource StyleDialogLabel}"/>
                    <ComboBox x:Name="TimezoneComboBox"
                             ItemsSource="{Binding Timezones}"
                             SelectedItem="{Binding SelectedTimezone}"
                             DisplayMemberPath="DisplayName"
                             Style="{StaticResource StyleDialogComboBox}"/>
                </StackPanel>

                <!-- Buttons -->
                <Border Grid.Row="2"
                       Background="#F5F5F5"
                       BorderBrush="#CCCCCC"
                       BorderThickness="0,1,0,0"
                       CornerRadius="0,0,6,6"
                       Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                               Content="Cancel"
                               Width="70"
                               Margin="0,0,8,0"
                               Command="{Binding CancelCommand}"
                               Style="{StaticResource SecondaryButtonStyle}"/>

                        <Button Grid.Column="2"
                               Content="Add"
                               Width="70"
                               Command="{Binding AddCommand}"
                               Style="{StaticResource SecondaryButtonStyle}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
