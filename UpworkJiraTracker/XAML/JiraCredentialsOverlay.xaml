<UserControl x:Class="UpworkJiraTracker.XAML.JiraCredentialsOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#80000000">
        <Border Background="White"
                Width="350"
                Height="240"
                CornerRadius="8"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                ShadowDepth="3"
                                Opacity="0.4"
                                Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                          Text="Jira OAuth Credentials"
                          Style="{StaticResource StyleConfirmationTitle}"/>

                <!-- Message -->
                <TextBlock Grid.Row="1"
                          Text="Enter your Jira OAuth app credentials:"
                          Style="{StaticResource StyleConfirmationMessage}"
                          Margin="0,0,0,8"/>

                <!-- Client ID -->
                <StackPanel Grid.Row="2" Margin="0,4">
                    <TextBlock Text="Client ID:"
                              FontSize="11"
                              Foreground="#666666"
                              Margin="0,0,0,2"/>
                    <TextBox x:Name="ClientIdTextBox"
                            Height="26"
                            Padding="6,4"
                            FontSize="12"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"/>
                </StackPanel>

                <!-- Client Secret -->
                <StackPanel Grid.Row="3" Margin="0,4">
                    <TextBlock Text="Client Secret:"
                              FontSize="11"
                              Foreground="#666666"
                              Margin="0,0,0,2"/>
                    <TextBox x:Name="ClientSecretTextBox"
                            Height="26"
                            Padding="6,4"
                            FontSize="12"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"/>
                </StackPanel>

                <!-- Hint -->
                <TextBlock Grid.Row="4"
                          Text="Get these from your Jira OAuth 2.0 app settings"
                          FontSize="10"
                          Foreground="#999999"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"
                          Margin="0,8,0,0"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="5"
                           Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           Margin="0,12,0,0">
                    <Button Content="Cancel"
                           Width="70"
                           Height="28"
                           Margin="0,0,8,0"
                           Click="CancelButton_Click"
                           Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="Connect"
                           Width="70"
                           Height="28"
                           Click="ConnectButton_Click"
                           Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
